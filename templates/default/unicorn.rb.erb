root = "<%= node['dafne_online']['deploy_base'] %>/current"
working_directory root
pid "#{root}/tmp/pids/unicorn.pid"
stderr_path "#{root}/log/unicorn.log"
stdout_path "#{root}/log/unicorn.log"

listen "<%= node['dafne_online']['deploy_base'] %>/shared/tmp/sockets/unicorn.sock"
worker_processes 8
timeout 30

