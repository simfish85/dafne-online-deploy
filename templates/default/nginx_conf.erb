upstream unicorn {
  server unix:<%= node['dafne_online']['deploy_base'] %>/shared/sockets/unicorn.sock fail_timeout=0;
}

server {
  listen 80 default deferred;
  # server_name example.com;
  root <%= node['dafne_online']['document_root'] %>;

  if (-f $document_root/system/maintenance.html) {
    return 503;
  }

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @<%= node['dafne_online']['app_name'] %>;
  location @<%= node['dafne_online']['app_name'] %> {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://<%= node['dafne_online']['app_name'] %>;
  }


  error_page 503 @maintenance;
    location @maintenance {
        rewrite ^(.*)$ /system/maintenance.html break;
  }

  error_page 500 502 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}
